---
layout: base.njk
pagination:
  data: catalog
  alias: entry
  size: 1
permalink: 'catalog/{{entry.id | slugify}}/'
eleventyComputed:
  title: '{{entry.name}}'
---

<style>
  .content.catalog-item {
    font-size: 1.4rem;
  }

  .metadata-comment {
    font-size: 80%;
  }

  .metadata-comment td {
    padding-top: 0;
  }

  .metadata-comment span {
    background-color: rgb(250, 250, 250);
    color: rgb(45, 45, 45);
  }
</style>

<script>
  function copyUrl() {
    const input = document.getElementById('catalog-entry-url');
    input.select();
    document.execCommand('copy');
  }
</script>

<div class="content catalog-item">
  <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap;">
    <h1>{{ entry.name }}</h1>
    {% include "catalog-entry-status.njk" %}
  </div>
  <table>
    <tr>
      <td>Spatial domain</td>
      <td>{{entry.spatial_domain}}</td>
    </tr>
    <tr>
      <td>Spatial resolution</td>
      <td>{{entry.spatial_resolution}}</td>
    </tr>
    <tr>
      <td>Time domain</td>
      <td>{{entry.time_domain}}</td>
    </tr>
    <tr>
      <td>Time resolution</td>
      <td>{{entry.time_resolution}}</td>
    </tr>
  </table>
  <p>
    <input id="catalog-entry-url" readonly name="url" value="{{ entry.url }}?email=optional@email.com"
      style="width: {{ entry.url.length + 27 }}ch; max-width: 100%;" />
    <span style="cursor: pointer;" onclick="copyUrl()">⎘</span>
    <div class="metadata-comment"><span>* Email optional. Providing your email as a query param helps us understand usage and impact to keep dynamical.org supported for the long-term. For catalog updates follow <a href='/updates'>here</a>.</span></div>
  </p>
  <p style="text-wrap: balance">{{ entry.descriptionFull | safe }}</p>

  <h2>Dimensions</h2>
  <table class="data">
    <tr>
      <th />
      <th>start</th>
      <th>stop</th>
      <th>units</th>
    </tr>
    {% for dim in entry.dimensions %}
    <tr>
      <td>
        <strong>{{ dim.name }}</strong>
      </td>
      <td>{{ dim.start }}</td>
      <td>{{ dim.end }}</td>
      <td>{{ dim.units }}</td>
    </tr>
    <tr class="metadata-comment">
      <td colspan="4"><span></span></td>
    </tr>
    {% endfor %}
  </table>

  <h2>Variables</h2>
  <table class="data">
    <tr>
      <th />
      <th>units</th>
      <th>dimensions</th>
    </tr>
    {% for variable in entry.variables %}
    <tr>
      <td>
        <strong>{{ variable.name }}</strong>
      </td>
      <td>{{ variable.units }}</td>
      <td>{{ variable._ARRAY_DIMENSIONS.join(' × ') }}</td>
    </tr>
    <tr class="metadata-comment">
      <td colspan="5">
        <span>{{ variable.long_name }}</span>
      </td>
    </tr>
    {% endfor %}
  </table>

  <h2>Examples</h2>

  <table>
    {% if entry.githubUrl %}
    <tr>
      <td style="text-align: center"><img src="/assets/github.svg" height="18" /></td>
      <td><a href="{{entry.githubUrl}}">Open notebook in github</a></td>
    </tr>
    {% endif %}
    {% if entry.colabUrl %}
    <td style="text-align: center;"><img src="/assets/colab.svg" height="18" /></td>
    <td><a href="{{entry.colabUrl}}">Open notebook in colab</a></td>
    {% endif %}
  </table>

  {% for example in entry.examples %}
  <div class="frame">
    <div class="frameHeader">
      <div class="frameHeaderTitle">dynamical.org - {{entry.name}}</div>
      <div class="frameHeaderSubtitle">{{example.title}}</div>
    </div>
    <pre class="frameContent frameContentDesktop"><code>{{example.code | highlight('py') | safe}}</code></pre>
  </div>
  {% endfor %}

</div>
